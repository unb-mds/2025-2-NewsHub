{
    // Nome amigável para o seu ambiente de desenvolvimento
    "name": "NewsHub Backend Dev",

    // Caminho para o seu arquivo docker-compose.yml
    // Corrigido para apontar para a pasta raiz (um nível acima)
    "dockerComposeFile": "../docker-compose.yml",

    // O serviço do docker-compose ao qual o VS Code deve se conectar
    "service": "backend",

    // O diretório que o VS Code deve abrir dentro do contêiner.
    // Aponta para o volume explícito que montamos no docker-compose.yml.
    "workspaceFolder": "/workspace",

    // Customizações para o ambiente
    "customizations": {
        // Configurações específicas do VS Code
        "vscode": {
            // Extensões que serão instaladas automaticamente no contêiner
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance"
            ],
            // Configurações do editor que serão aplicadas dentro do contêiner
            "settings": {
                // Garante que o Pylance use o interpretador Python correto de dentro do contêiner
                "python.defaultInterpreterPath": "/usr/local/bin/python"
            }
        }
    }
}
