# backend/Dockerfile

FROM python:3.12-slim

# Define o diretório de trabalho principal
WORKDIR /app # Este diretório será a raiz do nosso ambiente

# Copia apenas o arquivo de dependências
COPY ./requirements.txt .

# Instala as dependências
RUN pip install --no-cache-dir -r requirements.txt

# Copia o seu pacote de aplicação (a pasta local 'app') para dentro do WORKDIR
# A estrutura dentro do container será /app/app/...
COPY ./app ./app

# Expõe a porta que o Gunicorn irá usar
EXPOSE 5000

# Comando para iniciar a aplicação
# O Gunicorn será executado a partir de /app e encontrará o módulo 'main' dentro do pacote 'app'
CMD ["gunicorn", "--bind", "0.0.0.0:5000", "app.main:app"]